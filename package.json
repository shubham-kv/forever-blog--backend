{
	"name": "forever-blog-backend",
	"version": "0.1",
	"description": "Backend server for forever blog",
	"main": "src/index",
	"scripts": {
		"clean": "rimraf build",
		"prebuild": "npm run clean",
		"build": "tsc --build",
		"start": "node build/src/index",
		"dev": "ts-node-dev src/index",
		"lint": "eslint . --fix",
		"format": "prettier --write .",
		"test": "cross-env NODE_ENV=test jest --testTimeout=5000",
		"test:watch": "cross-env NODE_ENV=test jest --watch",
		"test:cov": "cross-env NODE_ENV=test jest --coverage",
		"prepare": "husky install"
	},
	"dependencies": {
		"bcrypt": "^5.1.1",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-rate-limit": "^7.1.4",
		"helmet": "^7.0.0",
		"joi": "^17.9.2",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^7.4.3",
		"pino": "^8.16.2",
		"pino-pretty": "^10.2.3",
		"rimraf": "^4.4.0"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"devDependencies": {
		"@faker-js/faker": "^8.3.1",
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.2",
		"@types/cookie-parser": "^1.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.6",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/node": "^18.15.0",
		"@types/supertest": "^2.0.15",
		"@typescript-eslint/eslint-plugin": "^6.11.0",
		"@typescript-eslint/parser": "^6.11.0",
		"eslint": "^8.54.0",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.0",
		"nodemon": "^3.0.1",
		"prettier": "^2.8.4",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.2.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/shubham-kv/forever-blog-backend.git"
	},
	"author": "Prince",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/shubham-kv/forever-blog-backend/issues"
	},
	"homepage": "https://github.com/shubham-kv/forever-blog-backend#readme"
}
